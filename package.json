{
  "name": "express-ts-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project ./  && cross-env NODE_ENV=production node --optimize_for_size --max_old_space_size=460 --gc_interval=100  dist/index.js",
    "start": "cross-env NODE_ENV=production node --optimize_for_size dist/index.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev  -r dotenv/config -r tsconfig-paths/register --inspect --ignore-watch node_modules src/index.ts ",
    "format": "eslint --fix src/**/*",
    "test": "jest --coverage",
    "test:unit": "jest --watch"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "helmet": "^4.6.0",
    "safe-regex": "^2.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.13",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}